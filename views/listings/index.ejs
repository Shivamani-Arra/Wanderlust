<% layout("/layouts/boilerplate") %> 


<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
    }


    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity:1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display:none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-left: 3rem;
        display:flex;
        align-items: center;

    }
</style>


